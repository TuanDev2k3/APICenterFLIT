
@{
    ViewData["Title"] = "Profile";
    ViewData["CustomCSS"] = "stylesLogin.css";
    Layout = "_LayoutAdmin";
}

@{
    var isAuthenticated = User.Identity!.IsAuthenticated;
}

<style>
    .account-info {
        display: flex;
        align-items: center;
        max-width: 600px;
        width: 100%;
        margin: 50px auto;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 8px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        background-color: #f9f9f9;
    }

    .avatar img {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        margin-right: 20px;
        object-fit: cover;
        box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.2);
    }

    .details h2 {
        margin: 0 0 10px;
        color: red;
        font-weight: bold;
        font-size: 25px;
    }

    .details p {
        margin: 5px 0;
        font-size: 16px;
        color: #555;
    }
</style>

@if (isAuthenticated)
{
    <div class="account-info">
        <div class="avatar">
            <img src="~/images/accounts/@ViewBag.profilePicture" alt="Avatar" />
        </div>
        <div class="details">
            <h2>@ViewBag.Name</h2>
            <p><strong>Email:</strong> @ViewBag.Email</p>
            <p><strong>Số điện thoại:</strong> @ViewBag.Phone</p>
        </div>
        <form method="post" action="/Account/Logout" style="margin-left: 50px">
            <button class="btn btn-danger" style="width: 100px" type="submit">Đăng xuất</button>
        </form>
    </div>

}
else
{
    <div>
        <p>You are not logged in.</p>
        <a href="/Account/LoginPage">Login with Google</a>
    </div>
}


