
@{
    ViewData["Title"] = "ChangePassword";
    Layout = "_LayoutAccount";
}
@model ChangePasswordViewModel
<style>
    form {
        max-width: 400px;
        margin: 50px auto;
        padding: 20px;
        background-color: #f9f9f9;
        border-radius: 8px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
    }

    /* Định dạng nhãn */
    label {
        display: block;
        margin-bottom: 8px;
        font-weight: bold;
        color: #333;
    }

    /* Định dạng input */
    input[type="password"] {
        width: 100%;
        padding: 10px;
        margin-bottom: 15px;
        border: 1px solid #ccc;
        border-radius: 4px;
        font-size: 14px;
    }

    /* Định dạng cho button */
    button[type="submit"] {
        width: 100%;
        padding: 12px;
        margin-top: 10px;
        background-color: #007bff;
        color: #fff;
        font-size: 16px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        button[type="submit"]:hover {
            background-color: #0056b3;
        }

    /* Thông báo lỗi */
    span.validation-error {
        display: block;
        color: #e74c3c;
        font-size: 13px;
        margin-top: -10px;
        margin-bottom: 10px;
    }

    /* Định dạng tin nhắn thành công */
    .success-message {
        color: #2ecc71;
        font-weight: bold;
        margin-top: 10px;
    }
</style>



<form asp-action="ChangePassword" method="post">
    <div class="text-danger" asp-validation-summary="All"></div>
    <div>
        <label>Mật khẩu hiện tại</label>
        <input asp-for="CurrentPassword" type="password" />
        <span class="validation-error" asp-validation-for="CurrentPassword"></span>
    </div>
    <div>
        <label>Mật khẩu mới</label>
        <input asp-for="NewPassword" type="password" />
        <span class="validation-error" asp-validation-for="NewPassword"></span>
    </div>
    <div>
        <label>Xác nhận mật khẩu mới</label>
        <input asp-for="ConfirmNewPassword" type="password" />
        <span class="validation-error" asp-validation-for="ConfirmNewPassword"></span>
    </div>
    <button type="submit">Đổi mật khẩu</button>
</form>



