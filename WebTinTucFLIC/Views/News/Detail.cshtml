<body class="animsition">
    <div class="container">
        <div class="bg0 flex-wr-sb-c p-rl-20 p-tb-8">
            <div class="f2-s-1 p-r-30 size-w-0 m-tb-6 flex-wr-s-c">
                <span class="dis-inline-block cl6 slide100-txt pos-relative size-w-0" data-in="fadeInDown"
                      data-out="fadeOutDown">
                </span>
            </div>

            <div class="pos-relative size-a-2 bo-1-rad-22 of-hidden bocl11 m-tb-6">
                <input class="f1-s-1 cl6 plh9 s-full p-l-25 p-r-45" type="text" name="search" placeholder="Tìm kiếm" />
                <button class="flex-c-c size-a-1 ab-t-r fs-20 cl2 hov-cl10 trans-03">
                    <i class="zmdi zmdi-search"></i>
                </button>
            </div>
        </div>
    </div>

    <!-- Post -->
    <section class="bg0 p-t-70">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-10 col-lg-8">
                    <div class="p-b-20">
                        <div class="container mt-4">
                            <div class="news-list">
                                @if (Model.Count == 0)
                                {
                                    <p class="text-center">Hiện tại chưa có bài viết nào cho danh mục này</p>
                                }
                                @foreach (var items in Model)
                                {
                                    <div class="news-item d-flex mb-4">
                                        <!-- Hình ảnh -->
                                        <div class="news-image me-3" style="
                                          margin-right: 35px;
                                          max-width: 240px;
                                          max-height: 144px;
                                                              ">
                                            <a asp-controller="News" asp-action="Blog" asp-route-id="@items.Id" asp-route-t="@items.TitleSlug">
                                                <img src="/images/news/@items.ImageUrl" class="img-fluid" style="
                                              width: 100%;
                                              height: 100%;
                                              object-fit: cover;
                                              cursor: pointer;
                                                                  " />
                                            </a>
                                        </div>

                                        <!-- Nội dung -->
                                        <div class="news-content">
                                            <h3 class="news-title mb-1">
                                                <a class="f1-m-3 cl2 hov-cl10 trans-03" style="font-size: 20px" asp-controller="News"
                                                   asp-action="Blog" asp-route-id="@items.Id" asp-route-t="@items.TitleSlug">@items.Title</a>
                                            </h3>
                                            <p class="news-description mb-1" style="
                                                font-size: 14px;
                                                display: -webkit-box;
                                                -webkit-line-clamp: 2;
                                                -webkit-box-orient: vertical;
                                                overflow: hidden;
                                                text-overflow: ellipsis;
                                                word-break: break-word;">
                                                @items.Description
                                            </p>
                                            @*
                                        <div class="news-comments text-muted">
                                        <span> bình luuan</span>
                                        </div>
                                        *@
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>


                    </div>
                </div>

                <div class="col-md-10 col-lg-4">
                    <div class="p-l-10 p-rl-0-sr991 p-b-20">
                        <!--  -->
                        <!--  -->
                        <div class="flex-c-s p-t-8">
                            <a href="#">
                                <img class="max-w-full" src="~/images/hinhPR.jpg" alt="IMG" />
                            </a>
                        </div>

                        <!--  -->
                        <div class="p-t-50">
                            <div class="how2 how2-cl4 flex-s-c">
                                <h3 class="f1-m-2 cl3 tab01-title">Kết nối với chúng tôi</h3>
                            </div>

                            <ul class="p-t-35">
                                <li class="flex-wr-sb-c p-b-20">
                                    <a href="#" class="size-a-8 flex-c-c borad-3 size-a-8 bg-facebook fs-16 cl0 hov-cl0">
                                        <span class="fab fa-facebook-f"></span>
                                    </a>

                                    <div class="size-w-3 flex-wr-sb-c">
                                        <span class="f1-s-8 cl3 p-r-20"> 6879 người thích </span>

                                        <a href="#" class="f1-s-9 text-uppercase cl3 hov-cl10 trans-03">
                                            <i class="fas fa-thumbs-up"></i>
                                        </a>
                                    </div>
                                </li>

                                <li class="flex-wr-sb-c p-b-20">
                                    <a href="#" class="size-a-8 flex-c-c borad-3 size-a-8 bg-twitter fs-16 cl0 hov-cl0">
                                        <span class="fab fa-twitter"></span>
                                    </a>

                                    <div class="size-w-3 flex-wr-sb-c">
                                        <span class="f1-s-8 cl3 p-r-20"> 568 theo dõi </span>

                                        <a href="#" class="f1-s-9 text-uppercase cl3 hov-cl10 trans-03">
                                            <i class="fas fa-camera"></i>
                                        </a>
                                    </div>
                                </li>

                                <li class="flex-wr-sb-c p-b-20">
                                    <a href="#" class="size-a-8 flex-c-c borad-3 size-a-8 bg-youtube fs-16 cl0 hov-cl0">
                                        <span class="fab fa-youtube"></span>
                                    </a>

                                    <div class="size-w-3 flex-wr-sb-c">
                                        <span class="f1-s-8 cl3 p-r-20"> 5039 đăng kí </span>

                                        <a href="#" class="f1-s-9 text-uppercase cl3 hov-cl10 trans-03">
                                            <i class="fas fa-user-tie"></i>
                                        </a>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>